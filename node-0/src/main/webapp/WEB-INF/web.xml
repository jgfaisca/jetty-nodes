<?xml version="1.0" encoding="UTF-8"?>
<web-app
   xmlns="http://xmlns.jcp.org/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
   metadata-complete="false"
   version="3.1">
 
  <servlet>
    <servlet-name>Hello</servlet-name>
    <servlet-class>com.rest.test.HelloServlet</servlet-class>
    <init-param>
        <param-name>dirAllowed</param-name>
        <param-value>false</param-value>
    </init-param>
  </servlet>

  <servlet-mapping>
    <servlet-name>Hello</servlet-name>
    <url-pattern>/hello/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>HelloServlet</servlet-name>
    <servlet-class>com.rpc.HelloServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>HelloServlet</servlet-name>
    <url-pattern>/rpc/hello/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>GetServlet</servlet-name>
    <servlet-class>com.rpc.GeRequestServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>GetServlet</servlet-name>
    <url-pattern>/rpc/get/*</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>RESTful</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
    <init-param>
        <param-name>jersey.config.server.provider.packages</param-name>
        <param-value>com.rest.test,com.rest.crud,com.rest.howtodoinjava</param-value>
    </init-param>
    <init-param>
        <param-name>jersey.config.server.provider.classnames</param-name>
        <param-value>org.glassfish.jersey.media.multipart.MultiPartFeature</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>RESTful</servlet-name>
    <url-pattern>/rest/*</url-pattern>
  </servlet-mapping>

</web-app>
